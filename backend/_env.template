# Docker BuildKit Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

SECRET_KEY=your-secret-key-here
DEBUG=False
PROFILE=Production
IO_DIR=exports

# LLM API Keys (for AI workflows)
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
MISTRAL_API_KEY=your-mistral-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# Embedding Service Configuration (REQUIRED)
# Provider options: openai, cohere, mistral, huggingface, anthropic
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BASE_URL=
EMBEDDING_BATCH_SIZE=100
EMBEDDING_TIMEOUT=30

# Alternative embedding providers (uncomment to use)
# Cohere
# COHERE_API_KEY=your-cohere-api-key-here
# EMBEDDING_PROVIDER=cohere
# EMBEDDING_MODEL=embed-multilingual-v3.0

# HuggingFace
# HUGGINGFACE_API_TOKEN=hf_your-token-here  
# EMBEDDING_PROVIDER=huggingface
# EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Mistral (EU-based, privacy-focused)
# EMBEDDING_PROVIDER=mistral
# EMBEDDING_API_KEY=${MISTRAL_API_KEY}  # Reuse existing Mistral key
# EMBEDDING_MODEL=mistral-embed

DJANGO_API_KEY=your-django-api-key-here
DJANGO_SERVER=http://thoth-be
STREAMLIT_SERVER=thoth-ai

DB_ROOT_PATH=/app/data

TOKENIZERS_PARALLELISM=false
LOGFIRE_TOKEN=your-logfire-token-here

DB_NAME_DOCKER="/app/data/db.sqlite3"
DB_NAME_LOCAL="db.sqlite3"

# Frontend URL for backend-to-frontend navigation
FRONTEND_URL=http://localhost:3000
