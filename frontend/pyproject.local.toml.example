# ==============================================================================
# LOCAL CONFIGURATION OVERRIDE - EXAMPLE (Frontend)
# ==============================================================================
# This file is automatically managed by the thoth_be installer
# Do NOT edit manually - use the installer UI to configure database extras
# 
# This file will be created as 'pyproject.local.toml' when you run the installer
# from thoth_be and select your database configuration through the UI.
# ==============================================================================

[project.optional-dependencies]
# These sections are managed by the installer based on your UI selections
# Default configuration includes PostgreSQL and SQLite (base dependencies)

# MariaDB Support - Added when MariaDB is selected in installer
mariadb = [
    "mariadb>=1.1.0",
]

# SQL Server Support - Added when SQL Server is selected in installer  
sqlserver = [
    "pyodbc>=4.0.0",
]

# All databases - Added when all databases are selected
all-databases = [
    "mariadb>=1.1.0",
    "pyodbc>=4.0.0",
]