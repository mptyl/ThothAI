# === THOTH AI - ENVIRONMENT TEMPLATE ===
# Copy this file to .env and fill in your API keys

# REQUIRED: At least one LLM API key
OPENAI_API_KEY=your-openai-key-here
# OR
GEMINI_API_KEY=your-gemini-key-here
# OR
ANTHROPIC_API_KEY=your-anthropic-key-here

# REQUIRED: Embedding service (defaults to OpenAI)
EMBEDDING_API_KEY=your-embedding-key-here
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# OPTIONAL: Additional LLM providers
MISTRAL_API_KEY=
DEEPSEEK_API_KEY=
DEEPSEEK_API_BASE=https://api.deepseek.com/v1
OPENROUTER_API_KEY=
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# OPTIONAL: Monitoring (Logfire)
LOGFIRE_TOKEN=

# OPTIONAL: Local model endpoints
OLLAMA_API_BASE=http://127.0.0.1:11434
LM_STUDIO_API_BASE=http://localhost:1234

# Paths configuration (modify if needed)
EXPORTS_DIR=./exports
LOGS_DIR=./logs
DATA_DIR=./data

# Port configuration (modify if ports are already in use)
WEB_PORT=80
BACKEND_PORT=8040
FRONTEND_PORT=3001
SQL_GENERATOR_PORT=8005

# Security (change these in production!)
SECRET_KEY=change-this-to-a-secure-random-string
NEXTAUTH_SECRET=change-this-to-another-secure-random-string
DJANGO_API_KEY=generate-a-secure-api-key-here